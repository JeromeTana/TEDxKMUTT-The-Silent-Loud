                <p class="text-slate-700">11 January 2025</p>
            </div>
            <div class="flex items-center gap-1">
                <Icon name="mdi:map-marker" class="text-primary-500 text-2xl" />
                <p class="text-slate-700">KX Building, Floor 7 & 8</p>
            </div>
        </div>
        <div class="flex gap-2 justify-center items-start">
            <Button
                href="#"
                variant="primary"
                text="Claim your tickets"
                iconRight="mdi:arrow-top-right"
                description="Only 300 tickets available"
            />
            <Button href="#" variant="secondary" text="Event agenda" />
        </div>
    </div>
    <div class="space-y-32 my-20">
        <div class="max-w-screen-2xl m-auto">
            <div class="h-[52rem] bg-slate-500 rounded-3xl p-2"></div>
        </div>
        <Container>
            <SectionTitle
                target="about"
                title="About the event"
                subtitle="Make the Silent Loud"
            />
        </Container>
        <Container>
            <SectionTitle
                target="speakers"
                title="Speakers"
                subtitle="Meet the Idea Sharers"
            />
            <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-2">
                {mockSpeakerInfo.map((speaker) => <SpeakerCard {...speaker} />)}
            </div>
        </Container>
        <Container>
            <SectionTitle
                target="agenda"
                title="Agenda"
                subtitle="Amazing talks in a day"
            />
            <div class="space-y-2">
                {mockAgenda.map((agenda) => <AgendaLayout {...agenda} />)}
            </div>
        </Container>
        <div class="bg-slate-500 m-4 p-4 rounded-3xl text-center h-[80vh]">
            <h3 class="text-6xl font-semibold">Join the Event</h3>
        </div>
        <Container>
            <SectionTitle
                target="faqs"
                title="FAQs"
                subtitle="Answers to your questions"
            />
            <div class="max-w-screen-lg m-auto space-y-2">
                {
                    mockFaqs.map((faq) => (
                        <Accordion title={faq.question} content={faq.answer} />
                    ))
                }
            </div>
        </Container>
    </div>
    <Footer />
    <script>
        var acc = document.getElementsByClassName("accordion");
        var i;

        function myFunction() {
            var x = document.getElementById("myLinks") as HTMLElement;
            if (x.style.display === "block") {
                x.style.display = "none";
            } else {
                x.style.display = "block";
            }
        }

        for (i = 0; i < acc.length; i++) {
            acc[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var panel = this.nextElementSibling;
                if (panel.style.maxHeight) {
                    panel.style.maxHeight = null;
                } else {
                    panel.style.maxHeight = panel.scrollHeight + "px";
                }
            });
        }

        addEventListener("DOMContentLoaded", () => {
            const burger = document.getElementById("burger") as HTMLElement;

            burger.addEventListener("click", () => {
                myFunction();
            });
        });
    </script>
</Layout>
