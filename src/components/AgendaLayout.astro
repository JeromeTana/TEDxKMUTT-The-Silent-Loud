---
import { Icon } from "astro-icon/components";
import AgendaItem from "./AgendaItem.astro";

interface Props {
    title: string;
    description: string;
    time?: string;
    items?: Props[];
    speaker?: { name: string; image: string };
}

const { title, description, time, items } = Astro.props;
---

{
    items ? (
        <div class="!my-12">
            <div class="mb-6">
                <h1 class="text-2xl font-bold">{title}</h1>
                <p class="text-slate-500">{description}</p>
            </div>
            <div class="grid gap-2 mt-4">
                {items.map((item) => (
                    <AgendaItem {...item} />
                ))}
            </div>
        </div>
    ) : (
        <AgendaItem time={time} title={title} description={description} />
    )
}
