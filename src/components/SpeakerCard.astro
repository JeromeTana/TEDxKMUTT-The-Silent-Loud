---
import { Icon } from "astro-icon/components";

interface Social {
    title: string;
    url: string;
    icon: string;
}

interface Props {
    name: string;
    title: string;
    image: string;
    socials: Social[];
}

const { name, title, image, socials } = Astro.props;
---

<div class="card text-center p-8 border rounded-3xl space-y-8">
    <div class="space-y-6">
        <img src={image} alt="" class="rounded-full w-36 m-auto" />
        <div class="mb-4 space-y-1">
            <h3 class="font-bold text-2xl">{name}</h3>
            <p class="text-primary-500">{title}</p>
        </div>
    </div>
    <div class="flex justify-center gap-2 text-2xl">
        {
            socials.map((social) => (
                <a
                    href={social.url}
                    class="button hover:text-primary-500 duration-200"
                >
                    <Icon name={social.icon}>{social.icon}</Icon>
                </a>
            ))
        }
    </div>
</div>
