---
import { Icon } from "astro-icon/components";
import Logo from "../assets/logos/TEDxKMUTT_b.png";
import NavLink from "./NavLink.astro";
---

<nav
    class="sticky top-0 flex justify-between items-center w-full p-4 bg-white shadow-sm mb-4"
>
    <img id="logo" src={Logo.src} alt="" fetchpriority="high" class="w-40" />
    <ul class="flex gap-10 text-xl">
        <NavLink href="#about" text="About event" />
        <NavLink href="#speakers" text="Speakers" />
        <NavLink href="#agenda" text="Agenda" />
        <NavLink href="#faqs" text="FAQs" />
    </ul>
    <button
        class="button flex items-center gap-1 font-bold bg-primary-500 hover:bg-primary-600 duration-200 text-white px-4 py-2 rounded-full"
    >
        <Icon name="mdi:ticket" />
        Claim your tickets
    </button>
</nav>
